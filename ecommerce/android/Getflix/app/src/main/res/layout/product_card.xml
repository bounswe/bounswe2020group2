<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.example.getflix.models.ProductModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="3dp"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/ic_examplepro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/product_name"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|start"
                android:gravity="left"
                android:text="@{product.name}"
                android:textColor="#472836"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.22000003"
                tools:text="TITLE" />

            <TextView
                android:id="@+id/product_info"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="35dp"
                android:gravity="left"
                android:text="@{product.short_description}"
                android:textColor="@color/initGold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/product_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.78" />


            </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="30dp"
                android:text="@{product.price}"
                android:textColor="@color/initPurple"
                android:textStyle="bold"
                android:textSize="23dp"
                app:layout_constraintVertical_bias="0.79" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decrease"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="decreaseInteger"
                    android:text="-"
                    android:background="@drawable/roundedbutton"
                    android:textAlignment = "center"
                    android:textStyle="bold"
                    android:padding="0dp"
                    android:textColor="@color/initPurple"/>

                <TextView
                    android:id="@+id/integer_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/increase"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="increaseInteger"
                    android:background="@drawable/roundedbutton"
                    android:text="+"
                    android:padding="0dp"
                    android:textStyle="bold"
                    android:textColor="@color/initPurple"/>
            </LinearLayout>
        </LinearLayout>


            <!-- <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@color/initGold"
                android:text="Sepete Ekle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.87"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" /> -->

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>