<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="@string/edittext_name"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/editable_name"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/open_sans_semibold"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/initPurple"
                android:textCursorDrawable="@color/black"
                android:textSize="17sp"
                android:translationY="3dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="@string/edittext_ownername"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/editable_ownername"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/open_sans_semibold"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/initPurple"
                android:textCursorDrawable="@color/black"
                android:textSize="17sp"
                android:translationY="3dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="@string/edittext_serialnumber"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/editable_serialnumber"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/open_sans_semibold"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/initPurple"
                android:textCursorDrawable="@color/black"
                android:textSize="17sp"
                android:translationY="3dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="@string/edittext_expirationmonth"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/editable_expirationmonth"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/open_sans_semibold"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/initPurple"
                android:textCursorDrawable="@color/black"
                android:textSize="17sp"
                android:translationY="3dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="@string/edittext_expirationyear"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/editable_expirationyear"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/open_sans_semibold"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/initPurple"
                android:textCursorDrawable="@color/black"
                android:textSize="17sp"
                android:translationY="3dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@android:color/darker_gray" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="@string/edittext_cvv"
            android:textColorHint="@color/black"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/editable_cvv"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/open_sans_semibold"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/initPurple"
                android:textCursorDrawable="@color/black"
                android:textSize="17sp"
                android:translationY="3dp">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="3dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Update"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</layout>